
<div class="container">
<%= link_to "Back", shelters_path, class: 'back-sec-btn' %>
</div>

<div class="container ahmo">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-lg-8 col-md-6">
      <h1 class="text-center mt-4 lato">Add a Shelter</h1>
      <div class="form lato">
        <div class="container">
          <%= simple_form_for(@shelter) do |f| %>
            <%= f.input :name %>
            <%= f.input :address %>
            <%= f.input :description %>
            <label class="sec-btn sec-btn-file">Upload picture
            <span style="display:none;">
            <%= f.input :photo, as: :file, class: "hidden" %>
            </span>
            </label><br><br>
            <%= f.submit class: 'prime-btn'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


