<div class="container ahmo">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-lg-8 col-md-6">
      <div class="form">
        <div class="container">
          <%= simple_form_for(@shelter) do |f| %>
            <%= f.input :name %>
            <%= f.input :address %>
            <%= f.input :description %>
            <%= f.input :photo, as: :file %>
            <%= f.submit class: 'prime-btn'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
<%= link_to "Back", shelters_path, class: 'back-sec-btn' %>
</div>
