<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex align-items">

    <%= link_to "Travel", root_path, class: "navbar-brand .link-styling-navbar lato mr-0" %>
    <div class="d-flex align-items-center">
      <i class="fas fa-paw"></i>
    </div>
   <%= link_to "Paws", root_path, class: "navbar-brand .link-styling-navbar lato" %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "All shelters", shelters_path , class: "nav-link" %>
        </li>
         <li class="nav-item">
          <%= link_to "Create a Shelter", new_shelter_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Dashboard", dashboard_index_path, class: "nav-link"%>
        </li>
        <li class="nav-item dropdown">

        <% if current_user.avatar.attached?  %>
          <%= cl_image_tag current_user.avatar.key, height: 40, width: 40, crop: :fill, class: "avatar", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= image_tag "https://media.defense.gov/2020/Feb/19/2002251686/700/465/0/200219-A-QY194-002.JPG", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Profile", dashboard_index_path, class: "dropdown-item" %>
            <%= link_to "Shelter Profile", dashboard_index_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
