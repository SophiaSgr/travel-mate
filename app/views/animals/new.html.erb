<div class="container">
<%= link_to "Back", shelter_path(@shelter), class: "back-sec-btn mt-4" %>
</div>

<div class="container ahmo">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-lg-8 col-md-6">
    <h1 class="text-center mt-4 lato">Add an animal to the shelter</h1>
      <div class="form">
        <div class="container">
          <%= simple_form_for [@shelter, @animal] do |f| %>
            <%= f.input :name %>
            <%= f.input :animal_type %>
            <%= f.input :weight %>
            <%= f.input :size %>
            <%= f.input :age %>
            <%= f.input :medical_information %>
            <%= f.input :race %>
            <%= f.input :description %>
            <%= f.input :dropoff %>
            <label class="sec-btn sec-btn-file">Upload picture
            <span style="display:none;">
            <%= f.input :photos, as: :file, input_html: { multiple: true }, class: "hidden" %>
            </span>
            </label><br><br>
            <%= f.submit "Create", class: "prime-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


