<div class="container ahmo">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-lg-8 col-md-6">
      <div class="form">
        <div class="container">
          <%= simple_form_for(@shelter, @animal) do |f| %>
            <%= f.input :name %>
            <%= f.input :animal_type %>
            <%= f.input :weight %>
            <%= f.input :size %>
            <%= f.input :age %>
            <%= f.input :medical_information %>
            <%= f.input :race %>
            <%= f.input :description %>
            <%= f.input :dropoff %>
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
            <%= f.submit class: 'prime-btn' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to "Back", shelter_animal_path, class: "sec-btn" %>
