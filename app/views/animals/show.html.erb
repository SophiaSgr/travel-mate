<div class="container py-3">

  <div class="card-product">

    <div id="card-img">
      <% if @animal.photos.attached? %>
        <% @animal.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 450, width: 450, crop: :fill %>
        <% end %>
      <% end %>
    </div>

    <div class="card-product-infos">
        <h1 class="headers-font"> <strong> <%= @animal.name %> </strong> </h1>
        <p> <strong>Destination:</strong> <%= @animal.dropoff %> </p>
        <p> <strong>Weight:</strong> <%= @animal.weight %> </p>
        <p> <strong>Size:</strong> <%= @animal.size %> kg </p>
        <p> <strong>Race:</strong> <%= @animal.race %> </p>
        <p> <strong>Medical information:</strong> <%= @animal.medical_information %> </p>
        <div class="card-product-description">
          <p> <%= @animal.description %> </p>
        </div>
    </div>
  </div>







